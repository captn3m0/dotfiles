modules-left = ${config.top-left}
modules-center = ${config.top-center}
modules-right = ${config.top-right}

tray-position = ${config.systray-top}
tray-padding = 0
tray-detached = false
tray-maxsize = 30


cursor-click = pointer
cursor-scroll = ns-resize

[bar/nord-down]
monitor = ${env:MONITOR:eDP1}
